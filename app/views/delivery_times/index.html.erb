<header class="container">
  <h1> Tabela de Prazos de Entrega </h1>
  <hr>
  <%= link_to 'Cadastrar novo prazo de entrega', new_delivery_time_url, class: "btn btn-primary  btn-m mb-3" %>
</header>

<% if @delivery_times.any? %>
  <div class="container text-center">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th> <%=DeliveryTime.human_attribute_name(:minimum_distance)%> </th>
          <th> <%=DeliveryTime.human_attribute_name(:maximum_distance)%> </th>
          <th> <%=DeliveryTime.human_attribute_name(:deadline_in_hours)%>  </th>
          <th> <%=DeliveryTime.human_attribute_name(:shipping_method_id)%>  </th>
          <th> Editar  </th>
        </tr>
      </thead>
      <tbody>
        <% @delivery_times.each do |dt|%>
        <tr>
          <td><%= dt.minimum_distance %></td>
          <td><%= dt.maximum_distance  %> </td>
          <td><%= dt.deadline_in_hours %> </td>
          <td><%= dt.shipping_method.name %> </td>
          <td><%= link_to 'Editar', edit_delivery_time_url(dt.id) %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
 </div>
<% else %>
<p> NÃ£o existem prazos de entrega cadastrados. </p>
<% end %>
