<% if @price_by_weight.errors.any? %>
  <ul>
    <p> Verifique os erros abaixo: </p>
    <% @price_by_weight.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>

<% end %>


<%= form_with model: @price_by_weight do |f| %>
<div>
  <%= f.label :minimum_weight %>
  <%= f.number_field :minimum_weight%>
</div> 
<div>
  <%= f.label :maximum_weight %>
  <%= f.number_field :maximum_weight%>
</div> 
<div>
  <%= f.label :price_per_kilometer %>
  <%= f.number_field :price_per_kilometer %>
</div> 
<div>
  <%= f.label :shipping_method_id %>
  <%= f.collection_select :shipping_method_id, @shipping_methods, :id, :name %>
</div> 

  <%= f.submit 'Salvar' %>
  <% end %>