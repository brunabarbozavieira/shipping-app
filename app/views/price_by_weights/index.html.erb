<header class="container">
  <h1> Tabela de Preço por Peso </h1>
  <hr>
  <%= link_to 'Cadastrar novo preço por peso', new_price_by_weight_url, class: "btn btn-primary  btn-m mb-3" %>
</header>
<% if @price_by_weights.any? %>
  <div class="container text-center">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th> <%=PriceByWeight.human_attribute_name(:minimum_weight)%> </th>
          <th> <%=PriceByWeight.human_attribute_name(:maximum_weight)%> </th>
          <th> <%=PriceByWeight.human_attribute_name(:price_per_kilometer)%>  </th>
          <th> <%=PriceByWeight.human_attribute_name(:shipping_method_id)%>  </th>
          <th> Editar  </th>
        </tr>
        </thead>
       <tbody>
        <% @price_by_weights.each do |pw|%>
        <tr>
          <td><%= pw.minimum_weight %></td>
          <td><%= pw.maximum_weight  %> </td>
          <td><%= pw.price_per_kilometer %> </td>
          <td><%= pw.shipping_method.name %> </td>
          <td><%= link_to 'Editar', edit_price_by_weight_url(pw.id) %> </td>
        </tr>
        <% end %>
        </tbody>
    </table>
  </div>
  <% else %>
  <p>Não existem cadastros de preço por peso.</p>
<% end %>