<h1> Editar Modalidade de Frete </h1>

<% if @shipping_method.errors.any? %>
  <ul>
    <p> Verifique os erros abaixo: </p>
    <% @shipping_method.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>

<% end %>

<%= form_with model: @shipping_method do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :minimum_distance %>
    <%= f.number_field :minimum_distance %>
  </div>
  <div>
    <%= f.label :maximum_distance %>
    <%= f.number_field :maximum_distance %>
  </div>
  <div>
    <%= f.label :minimum_weight %>
    <%= f.number_field :minimum_weight %>
  </div>
  <div>
    <%= f.label :maximum_weight %>
    <%= f.number_field :maximum_weight %>
  </div>
  <div>
    <%= f.label :flat_rate %>
    <%= f.number_field :flat_rate %>
  </div>
  <div>
    <%= f.submit 'Salvar' %>
  </div>
  <% end %>