<h1> Detalhes da Modalidade de Frete </h1>

<h2> <%= @shipping_method.name %> </h2>
  <dl>
    <dt> <%=ShippingMethod.human_attribute_name(:minimum_distance)%>: </dt>
    <dd> <%= @shipping_method.minimum_distance %> </dd>
    <dt> <%=ShippingMethod.human_attribute_name(:maximum_distance)%>: </dt>
    <dd> <%= @shipping_method.maximum_distance%> </dd>
    <dt> <%=ShippingMethod.human_attribute_name(:minimum_weight)%>: </dt>
    <dd> <%= @shipping_method.minimum_weight %> </dd>
    <dt> <%=ShippingMethod.human_attribute_name(:maximum_weight)%>: </dt>
    <dd> <%= @shipping_method.maximum_weight %> </dd>
    <dt> <%=ShippingMethod.human_attribute_name(:flat_rate)%>: </dt>
    <dd> <%= @shipping_method.flat_rate %> </dd>
    <dt> <%=ShippingMethod.human_attribute_name(:status)%>: </dt>
    <dd> <%= I18n.translate(@shipping_method.status) %> </dd>
  </dl>
  <% if @shipping_method.active? %>
    <%= button_to 'Desativar', disabled_shipping_method_url(@shipping_method.id) %>
   <% else %>
    <%= button_to 'Ativar', active_shipping_method_url(@shipping_method.id) %>
  <% end %>

  <%= link_to 'Editar', edit_shipping_method_url %>