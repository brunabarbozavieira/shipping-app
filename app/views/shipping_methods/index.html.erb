<h1> Lista de Modalidade de frete </h1>

<%= link_to 'Cadastrar Nova Modalidade de Frete', new_shipping_method_url %>

<% if @shipping_methods.any? %>
  
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th> <%=ShippingMethod.human_attribute_name(:name)%> </th>
          <th> <%=ShippingMethod.human_attribute_name(:flat_rate)%> </th>
          <th> <%=ShippingMethod.human_attribute_name(:status)%> </th>
        </tr>
      </thead>
      <tbody>
        <% @shipping_methods.each do |sm|%>
        <tr>
          <td> <%= link_to sm.name, sm  %> </td>
          <td> R$ <%= sm.flat_rate %> </td>
          <td> <%= I18n.translate(sm.status)%> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
 
  <% else %>
  <p>NÃ£o existem modalidades de frete cadastradas.</p>
<% end %>