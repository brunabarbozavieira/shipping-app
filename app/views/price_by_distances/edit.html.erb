<h1> Editar Preço por Distância </h1>

<% if @price_by_distance.errors.any? %>
  <ul>
    <p> Verifique os erros abaixo: </p>
    <% @price_by_distance.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>

<% end %>


<%= form_with model: @price_by_distance do |f| %>
<div>
  <%= f.label :minimum_distance %>
  <%= f.number_field :minimum_distance%>
</div> 
<div>
  <%= f.label :maximum_distance %>
  <%= f.number_field :maximum_distance%>
</div> 
<div>
  <%= f.label :rate %>
  <%= f.number_field :rate %>
</div> 
  <%= f.submit 'Salvar' %>
  <% end %>